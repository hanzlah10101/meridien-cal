{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*": {
      "memory": 256,
      "maxDuration": 10,
      "includeFiles": "assets/**/*"
    }
  },
  "buildCommand": "pnpm build",
  "outputDirectory": "",
  "public": true,
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/events",
      "destination": "/api/index"
    },
    {
      "source": "/login",
      "destination": "/api/index"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    }
  ]
}
